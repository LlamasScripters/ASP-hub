{
	"compilerOptions": {
		"target": "ES2024",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "env.d.ts"],
	"exclude": [
		"node_modules",
		"dist",
		"drizzle.config.ts",
		"drizzle-dev.config.ts"
	]
}
