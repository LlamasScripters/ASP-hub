{
	"compilerOptions": {
		"target": "ES2024",
		"module": "NodeNext",
		"rootDir": "./src",
		"moduleResolution": "nodenext",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "env.d.ts"],
	"exclude": ["node_modules", "dist", "*.config.ts"]
}
